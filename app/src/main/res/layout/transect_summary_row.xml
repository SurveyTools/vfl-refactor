<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

	<!-- CUSTOM_LIST_IN_DIALOG: item layout and ids  -->

    <TextView
        android:id="@+id/transect_summary_item_label_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:text="Avg Spd"
         android:layout_marginLeft="24dp"
         android:layout_marginRight="0dp"
        android:textColor="@color/transect_summary_item_label_color"
        android:textSize="28sp" >

    </TextView>

    <!--  SUMMARY_HEADER_LAYOUT -->
    <TextView
        android:id="@+id/transect_summary_item_value_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="24dp"
        android:layout_weight="1"
        android:gravity="left"
        android:text="30 kph"
        android:textColor="@color/transect_summary_item_value_color"
        android:textSize="32sp" />

</LinearLayout> 